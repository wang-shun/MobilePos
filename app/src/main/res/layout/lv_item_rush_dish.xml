<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rel_convertView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical">


    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp5"
        android:background="@drawable/ad_select"/>


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp5"
        android:gravity="center"
        android:padding="@dimen/item_spacing15"
        android:text="1"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/str_defaul_18"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_money"
        android:gravity="center"
        android:paddingRight="@dimen/dp10"
        android:text="1"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/str_defaul_18"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_count"
        android:layout_toRightOf="@+id/img_select">

        <TextView
            android:id="@+id/tv_dishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="111111"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/str_defaul_18"
            />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dishName"
            android:gravity="left"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp3"
            android:text="11111"
            android:textColor="@color/red"
            android:textSize="@dimen/str_defaul_16"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_selectCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp10"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_add_selector"
            />

        <TextView
            android:id="@+id/tv_selectCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_add"
            android:gravity="center"
            android:padding="@dimen/item_spacing10"
            android:text="0"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/str_defaul_24"/>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_spacing10"
            android:layout_toStartOf="@+id/tv_selectCount"
            android:background="@drawable/reduce"/>

    </RelativeLayout>


</RelativeLayout>
