<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:background="@drawable/layout_selector_gray"
        >

        <TextView
            android:id="@+id/order_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单编号"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/creat_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下单时间"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />
        <TextView
            android:id="@+id/creat_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/order_tableName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="餐号"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25"
                android:layout_weight="0.8"
                android:background="@drawable/btn_selector_gray"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/login_gray"
                android:layout_marginRight="@dimen/dp3"
                android:textSize="@dimen/sp12"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/pay_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25"
                android:layout_weight="0.9"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/dp3"
                android:text="操作"
                android:textColor="@color/dishitem_count_font_gray"
                android:textSize="@dimen/sp13" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp20"
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_do">
        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="拒单"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:textColor="@color/login_gray"
            android:background="@drawable/btn_selector_gray"
            android:layout_marginRight="@dimen/dp5"
            />
        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="接单"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:textColor="@color/white"
            android:background="@drawable/btn_selector_blue"
            android:layout_marginLeft="@dimen/dp5"
            />
    </LinearLayout>
    <View
        style="@style/sty_line"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"/>

</LinearLayout>