<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal"
        android:background="@color/bbutton_info_dish_item">

        <LinearLayout
            android:id="@+id/refrush"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/refrush_iv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/loading"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reprot_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单报表"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/jiantou"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp10"
            android:background="@drawable/layout_selector"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:src="@drawable/more"
                />
        </LinearLayout>

    </RelativeLayout>
    <!--订单报表-->
    <LinearLayout
        android:id="@+id/order_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <View style="@style/sty_line"/>
        <!--订单总数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/icon_ding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单总数"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/common_orange"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line" android:layout_marginLeft="@dimen/dp40"/>
        <!--订单金额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white_order_title"
            >
            <ImageView
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22"
                android:src="@drawable/icon_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单总额"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/common_orange"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line" android:layout_marginLeft="@dimen/dp40"/>
        <!--退单总数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/icon_tui"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退单总数"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/refundo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line" android:layout_marginLeft="@dimen/dp40"/>
        <!--退单总额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white_order_title"
            >
            <ImageView
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22"
                android:src="@drawable/icon_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退单总额"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/refundo_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line" android:layout_marginLeft="@dimen/dp40"/>

        <!--退菜总数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/icon_tui"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退菜总数"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/refundd_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line" android:layout_marginLeft="@dimen/dp40"/>
        <!--退菜总额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white_order_title"
            >
            <ImageView
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22"
                android:src="@drawable/icon_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退菜总额"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                />
            <TextView
                android:id="@+id/refundd_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textSize="@dimen/sp14"
                android:textColor="@color/login_gray"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View style="@style/sty_line"/>

    </LinearLayout>

    <!--支付统计-->
    <LinearLayout
        android:id="@+id/pay_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:background="@color/white_order_title"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="类型"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="笔数"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="金额"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>
        <View style="@style/sty_line"/>
        <ListView
            android:id="@+id/pay_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/listView"
            />
    </LinearLayout>

    <!--菜品销售统计-->
    <LinearLayout
        android:id="@+id/dish_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:background="@color/white_order_title"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="菜品"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="数量"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="金额"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="百分比"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/sp14"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>
        <View style="@style/sty_line"/>
        <ListView
            android:id="@+id/dish_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/listView"
            />
    </LinearLayout>

</LinearLayout>