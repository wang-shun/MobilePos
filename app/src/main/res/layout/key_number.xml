<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/key_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="请输入金额"
            android:textColor="@color/bbutton_info"
            android:textSize="@dimen/sp14"
            />
        <TextView
            android:id="@+id/key_close"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp15"
            android:paddingLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/bbutton_info"
            android:textSize="@dimen/sp14"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_common"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginBottom="@dimen/dp3">
        <!--展示框、清空-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.05"
                android:background="@drawable/key_number_selector"
                android:layout_margin="@dimen/dp1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/key_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp15"
                    android:text="0￥"/>
                <LinearLayout
                    android:id="@+id/no_pay_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/dp15"
                    >
                    <TextView
                        android:id="@+id/no_pay_money"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right|bottom"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp15"
                        android:text="0.0￥"/>
                    <TextView
                        android:id="@+id/no_pay_tv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/login_gray"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold"
                        android:text="未支付"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/key_clear"
                style="@style/key_number_style"
                android:text="刚好"
                android:textColor="@color/common_green"
                android:textStyle="bold"
                />
        </LinearLayout>
        <!--1、2、3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key_one"
                style="@style/key_number_style"
                android:text="1"
                />
            <TextView
                android:id="@+id/key_two"
                style="@style/key_number_style"
                android:text="2"

                />
            <TextView
                android:id="@+id/key_three"
                style="@style/key_number_style"
                android:text="3"
                />
            <TextView
                android:id="@+id/key_other_one"
                style="@style/key_number_style"
                android:text=""
                android:textColor="@color/yellow_bg"
                />
        </LinearLayout>
        <!--4、5、6-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key_four"
                style="@style/key_number_style"
                android:text="4"
                />
            <TextView
                android:id="@+id/key_five"
                style="@style/key_number_style"
                android:text="5"

                />
            <TextView
                android:id="@+id/key_six"
                style="@style/key_number_style"
                android:text="6"
                />
            <TextView
                android:id="@+id/key_other_two"
                style="@style/key_number_style"
                android:text=""
                android:textColor="@color/yellow_bg"
                />
        </LinearLayout>
        <!--7、8、9-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key_seven"
                style="@style/key_number_style"
                android:text="7"
                />
            <TextView
                android:id="@+id/key_eight"
                style="@style/key_number_style"
                android:text="8"

                />
            <TextView
                android:id="@+id/key_nine"
                style="@style/key_number_style"
                android:text="9"
                />
            <TextView
                android:id="@+id/key_other_three"
                style="@style/key_number_style"
                android:text=""
                android:textColor="@color/yellow_bg"
                />
        </LinearLayout>
        <!--删除、0、·-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key_delete"
                style="@style/key_number_style"
                android:text="删除"
                android:background="@drawable/key_number_red_selector"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/key_zero"
                style="@style/key_number_style"
                android:text="0"
                />
            <TextView
                android:id="@+id/key_point"
                style="@style/key_number_style"
                android:textStyle="bold"
                android:text="·"/>
            <TextView
                android:id="@+id/key_ok"
                style="@style/key_number_style"
                android:background="@drawable/key_number_green_selector"
                android:textColor="@color/white"
                android:text="确定"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>