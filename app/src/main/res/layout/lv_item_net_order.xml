<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10"
        android:background="@drawable/layout_selector_gray"
        >

        <TextView
            android:id="@+id/order_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="订单编号"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/creat_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="下单时间"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />
        <TextView
            android:id="@+id/creat_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/order_tableName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="餐号"
            android:textColor="@color/login_gray"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:id="@+id/lin_do"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pay_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="@dimen/dp5"
                android:layout_margin="@dimen/dp3"
                android:gravity="center"
                android:background="@drawable/btn_selector_bright_blue"
                android:text="@string/accept_order"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13" />
            <TextView
                android:id="@+id/edit_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_red"
                android:gravity="center"
                android:text="@string/refuse"
                android:padding="@dimen/dp5"
                android:layout_margin="@dimen/dp3"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/sty_line"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"/>

</LinearLayout>